################################
# PLATFORM & TARGET
################################
PLATFORM=Android                  # Android | iOS
RUN_TARGET=bs                     # bs | local_real_android | local_real_ios | local_emulator

################################
# BROWSERSTACK CONFIGURATION
################################
BROWSERSTACK_USERNAME=your_bs_username
BROWSERSTACK_ACCESS_KEY=your_bs_access_key
BSTACK_LOCAL=false

# BrowserStack Device Selection
BS_ANDROID_DEVICE=Samsung Galaxy S24
BS_ANDROID_VERSION=14.0
BS_IOS_DEVICE=iPhone 15 Pro
BS_IOS_VERSION=17

################################
# LOCAL DEVICE CONFIGURATION
################################
ANDROID_DEVICE_NAME=Android Emulator
ANDROID_PLATFORM_VERSION=13
ANDROID_AVD_NAME=Pixel_6_Pro_API_34

IOS_DEVICE_NAME=iPhone 15 Pro
IOS_PLATFORM_VERSION=17

################################
# APP PATHS & METADATA
################################
ANDROID_APP=PearPass.apk
IOS_APP=PearPass.ipa

# Android App Package (Optional)
# APP_PACKAGE=com.pearpass.app
# APP_ACTIVITY=com.pearpass.app.MainActivity

BUILD_PREFIX=PearPass E2E
APP_VERSION=1.5.0

################################
# QASE TEST MANAGEMENT
################################
ENABLE_QASE=true
QASE_API_TOKEN=your_qase_api_token_here
QASE_PROJECT_CODE=PAS

# Test Plan ID (рекомендуется для автоматического создания runs в рамках плана)
QASE_TESTOPS_PLAN_ID=2
# QASE_TESTOPS_PLAN_ID=2 - создаст новый Test Run в рамках Test Plan ID=2
# QASE_TESTOPS_PLAN_ID=0 - не использовать Test Plan
# Альтернативное имя: QASE_PLAN_ID (также поддерживается)

# Test Run ID (альтернатива - использовать существующий run)
QASE_RUN_ID=0
# QASE_RUN_ID=0 - автоматически создаст новый run (если QASE_PLAN_ID не указан)
# QASE_RUN_ID=<number> - использовать существующий Test Run ID
# Приоритет: если указан QASE_PLAN_ID, он имеет приоритет над QASE_RUN_ID

################################
# SLACK NOTIFICATIONS
################################
ENABLE_SLACK=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# Get webhook URL from: Slack → Apps → Incoming Webhooks → Add to Slack
