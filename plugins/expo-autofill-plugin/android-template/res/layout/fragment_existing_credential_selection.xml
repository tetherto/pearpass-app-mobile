<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/autofill_background"
    android:fitsSystemWindows="true">

    <!-- Cancel Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Cancel"
            android:textColor="#B0D944"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Passkey"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose where to store this Passkey, or create a new item."
            android:textColor="#B3FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- Search bar -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/search_input_background"
            android:hint="Search..."
            android:textColorHint="#BABABA"
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Credentials list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/credentialsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Empty state -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No matching login found, search it or create a new login to store this passkey."
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/search_input_background"
            android:padding="16dp"
            android:layout_marginTop="40dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Create new login button -->
    <Button
        android:id="@+id/createNewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new login"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/primary_button"
        android:paddingVertical="14dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp" />

</LinearLayout>
