<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/autofill_background"
    android:fitsSystemWindows="true">

    <!-- Cancel Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Cancel"
            android:textColor="#B0D944"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center" />
    </RelativeLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock Vault"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginBottom="8dp" />

            <!-- Vault Name -->
            <TextView
                android:id="@+id/vaultNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vault Name"
                android:textColor="#66FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/password_input_background"
                android:hint="Enter vault password"
                android:textColorHint="#66FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:inputType="textPassword"
                android:layout_marginBottom="20dp" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF4444"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <!-- Unlock Button -->
            <Button
                android:id="@+id/unlockButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/primary_button"
                android:paddingVertical="12dp"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>