<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="12dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginVertical="4dp">

    <!-- Initials Circle -->
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp">

        <View
            android:id="@+id/initials_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/initials_circle_background" />

        <TextView
            android:id="@+id/initials_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AB"
            android:textColor="#B0D944"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/credential_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credential Title"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/credential_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="15sp"
                android:textColor="#8E8E93" />

            <TextView
                android:id="@+id/passkey_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passkey"
                android:textSize="11sp"
                android:textColor="#B0D944"
                android:textStyle="bold"
                android:background="@drawable/search_input_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>