{
  "expo": {
    "name": "PearPass",
    "slug": "pearpass-app-mobile",
    "icon": "./assets/images/appIcons/app-icon.png",
    "version": "1.2.1",
    "android": {
      "package": "com.noxtton.pearpass",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/appIcons/adaptive-icon.png",
        "backgroundColor": "#232323"
      }
    },
    "ios": {
      "bundleIdentifier": "com.noxtton.pearpass",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to allow you to select and upload photos.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "supportsTablet": false,
      "runtimeVersion": {
        "policy": "sdkVersion"
      },
      "usesNonExemptEncryption": false,
      "scheme": "pearpassappmobile",
      "appleTeamId": "77ZH693K52",
      "entitlements": {
        "com.apple.developer.authentication-services.autofill-credential-provider": true,
        "com.apple.security.application-groups": ["group.com.noxtton.pearpass"]
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": ["CA92.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryFileTimestamp",
            "NSPrivacyAccessedAPITypeReasons": ["0A2A.1", "3B52.1", "C617.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryDiskSpace",
            "NSPrivacyAccessedAPITypeReasons": ["E174.1", "85F4.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategorySystemBootTime",
            "NSPrivacyAccessedAPITypeReasons": ["35F9.1"]
          }
        ],
        "NSPrivacyCollectedDataTypes": [],
        "NSPrivacyTracking": false
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes for securely pairing your vault with another device."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "assets/fonts/humble-nostalgia.otf",
            "assets/fonts/inter.ttf"
          ]
        }
      ],
      "expo-asset",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 29,
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "extraProguardRules": "-keep class com.swmansion.reanimated.** { *; }\n-keep class com.facebook.react.turbomodule.** { *; }\n-keep class to.pear.bare.** { *; }\n-keep class com.noxtton.pearpass.autofill.** { *; }",
            "usesCleartextTraffic": true
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID or Touch ID to quickly and securely unlock your vault without entering your master password."
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID or Touch ID to quickly and securely unlock your vault without entering your master password."
        }
      ],
      "expo-video",
      "./plugins/withAppConfig",
      "./plugins/withRiveAssets",
      "./plugins/withNativeClipboard",
      "./plugins/withCustomSplashScreen",
      ["./plugins/expo-autofill-plugin", {
        "ios": {
          "appGroupIdentifier": "group.com.noxtton.pearpass"
        },
        "extensionBundlePath": "bundles/autofill.bundle"
      }]
    ],
    "extra": {
      "appVersion": "1.2.1",
      "eas": {
        "projectId": "f6132c16-1ff8-446a-8012-5271ec0e16e5",
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "PearPassAutoFillExtension",
                  "bundleIdentifier": "com.noxtton.pearpass.PearPassAutoFillExtension",
                  "entitlements": {
                    "com.apple.developer.authentication-services.autofill-credential-provider": true,
                    "com.apple.security.application-groups": ["group.com.noxtton.pearpass"],
                    "keychain-access-groups": ["$(AppIdentifierPrefix)com.noxtton.pearpass"]
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
